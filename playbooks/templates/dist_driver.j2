source /opt/DL/tensorflow/bin/tensorflow-activate
python {{ reference_architecture['powerai_playbook']['mnist_test_dest'] }}
{%- if groups['parameter'] %}
 --ps_hosts=
{%- for host_name in groups['parameter'] %}
{{ host_name }}:2222
